#
# Services class, providing services like time, input/output and logging to the rest of the application
#
# Author: Filip van Laenen <f.a.vanlaenen@ieee.org>
#

require 'io_facade'
require 'rand_facade'
require 'time_facade'

class Services
	
	def self.io
		if (@@io == nil)
			@@io = IoFacade.new
		end
		return @@io
	end
		
	def self.rand
		if (@@rand == nil)
			@@rand = RandFacade.new
		end
		return @@rand
	end

	def self.time
		if (@@time == nil)
			@@time = TimeFacade.new
		end
		return @@time
	end

	def self.io= (io)
		@@io = io
	end
	
	def self.rand= (rand)
		@@rand = rand
	end

	def self.time= (time)
		@@time = time
	end

end
